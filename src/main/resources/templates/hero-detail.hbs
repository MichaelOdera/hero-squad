{{#partial "content"}}
    <div class="row">
        <div class="col-md-6 detail">
            <p>Edit Hero Details</p>
            <h4 style="color:white;">{{LookedForHero.name}}</h4>
            <h5>Power:</h5>
            <p>{{lookedForHero.power}}</p>
            <h5>Weakness:</h5>
            <p>{{lookedForHero.weakness}}</p>
            <h5>Age:</h5>
            <p> {{lookedForHero.age}}</p>
            <h5>Created At:</h5>
            <p>{{lookedForHero.dayCreated}}</p>
            <h5>Post status:</h5>
            <p>
                {{#if lookedForHero.populatefirst}}
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
                {{else}}
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
                {{/if}}

                <a href="/heros/{{lookedForHero.id}}/update">Edit details</a><br>
                <a href="/heros/{{lookedForHero.id}}/delete">Remove Hero</a>
            </p>
        </div>
        <div class="col-md-6">
            <img src="https://i.pinimg.com/236x/8e/cb/4e/8ecb4e2fb0dfa327b14c57d1d8bfc832.jpg">
        </div>
    </div>

{{/partial}}
{{> layout.hbs}}